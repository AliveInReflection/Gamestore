<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >


  <!-- optional, add some variabeles
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target 
      name="IPAdresseLog" 
      xsi:type="File" 
      fileName="${basedir}/App_Data/Logs/IPAdresseLog/${shortdate}.txt"
      layout="${message}"
      />
    <target 
      name="PerformanceLog" 
      xsi:type="File" 
      fileName="${basedir}/App_Data/Logs/PerformanceLog/${shortdate}.txt"
      layout="${message}"
      />
    <target 
      name="ErrorsLog" 
      xsi:type="File" 
      fileName="${basedir}/App_Data/Logs/ErrorsLog/${shortdate}.txt"
      layout="${longdate}|${level}| ${message}"
      />
  </targets>

  <rules>
    <logger name="IPAdresseLogger" minlevel="Info" writeTo="IPAdresseLog"/>
    <logger name="PerformanceLogger" minlevel="Info" writeTo="PerformanceLog"/>
    <logger name="ErrorsLogger" minlevel="Error" writeTo="ErrorsLog"/>
  </rules>
</nlog>