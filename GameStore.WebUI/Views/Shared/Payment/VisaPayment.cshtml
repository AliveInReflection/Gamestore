@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VisaPayment</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <table>
                <tr>
                    <td>Cart holder’s name</td>
                    <td>@Html.TextBox("name")</td>
                </tr>
                <tr>
                    <td>Card number</td>
                    <td>@Html.TextBox("number")</td>
                </tr>
                <tr>
                    <td>Date of expiry </td>
                    <td>@Html.TextBox("date")</td>
                </tr>
                <tr>
                    <td>CVV2/CVC2</td>
                    <td>@Html.TextBox("secure")</td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
