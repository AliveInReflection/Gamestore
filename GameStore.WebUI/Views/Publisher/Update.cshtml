@using GameStore.WebUI.App_LocalResources.Localization
@model GameStore.WebUI.Models.UpdatePublisherViewModel

@{
    ViewBag.Title = ViewsRes.PublisherUpdateTitle;
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)



    <table class="table">
        <tr>
            <td class="editor-label">
                @Html.LabelFor(model => model.PublisherId)
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.PublisherId)
                @Html.ValidationMessageFor(model => model.PublisherId)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                @Html.LabelFor(model => model.CompanyName)
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.CompanyName)
                @Html.ValidationMessageFor(model => model.CompanyName)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                @Html.LabelFor(model => model.Description)
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                @Html.LabelFor(model => model.HomePage)
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.HomePage)
                @Html.ValidationMessageFor(model => model.HomePage)
            </td>
        </tr>
    </table>

        <p>
            <input type="submit" value="@ViewsRes.LinkSave" />
        </p>
}

@section Scripts {

}
