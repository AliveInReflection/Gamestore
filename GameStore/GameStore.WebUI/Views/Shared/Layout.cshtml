@using GameStore.WebUI.App_LocalResources.Localization
@using GameStore.WebUI.Helpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Layout</title>
    <link rel="stylesheet" href="/Content/Styles/Tags.css" />
    <link rel="stylesheet" href="/Content/Styles/Main.css" />
    <link rel="stylesheet" href="/Content/Styles/Content.css" />
    @RenderSection("Styles", false)
</head>
<body>
<div class="page-wrapper">
    <div class="support-line">
        <div class="localization">@Url.ChangeLanguage("English", ViewContext.RouteData, "en") | @Url.ChangeLanguage("Русский", ViewContext.RouteData, "ru")</div>
        @Html.Partial("_SupportPartial")
    </div>
    <div class="header">
        <div class="logo-line">
            <div class="logo">
                <img src="/Content/Images/Layout/logo.png" class="logo-img"/>
            </div>
            <div class="auth">
                @Html.Partial("_LoginPartial")
            </div>

        </div>
        <div class="menu-line">
            @Html.BuildMenu()
        </div>
        <div class="sub-header">
            
            <div class="slogan-column">
                <h3>GameStore</h3>
            </div>
            <div class="sub-logo-column">

                <img src="/Content/Images/Layout/Normandy.png"/>
            </div>
        </div>
    </div>

    <div class="content-line">
        <div class="content">
            @RenderBody()
        </div>
        <div class="side-bar">
            @RenderSection("SideBar", false)
        </div>
    </div>

    
    @RenderSection("Scripts", false)

</div>

    <div class="pull-right">
        @Html.ActionLink(ViewsRes.MenuBasket, "Details", "Order")
    </div>
</body>
</html>
